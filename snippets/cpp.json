      ")",
      "",
      "routes/hello.cpp",
      "",
      "",
      "//hello.cpp",
      "#include \"hello.h\"",
      "#include <drogon/drogon.h>",
      "",
      "using namespace drogon;",
      "using namespace std;",
      "",
      "Task<HttpResponsePtr> HelloController::hello(HttpRequestPtr req,",
      "                                             string name) {",
      "  Json::Value response;",
      "  response[\"hello\"] = \"Hello \" + name;",
      "",
      "  auto resp = HttpResponse::newHttpJsonResponse(response);",
      "  resp->setStatusCode(k200OK);",
      "  co_return resp;",
      "}",
      "",
      "// hello.h",
      "#pragma once",
      "#include <drogon/HttpController.h>",
      "#include <string>",
      "",
      "using namespace drogon;",
      "using namespace std;",
      "class HelloController : public HttpController<HelloController> {",
      "public:",
      "  METHOD_LIST_BEGIN",
      "  ADD_METHOD_TO(HelloController::hello, \"/hello/{name}\", Get);",
      "  METHOD_LIST_END",
      "",
      "  static Task<HttpResponsePtr> hello(HttpRequestPtr req, string name);",
      "};",
      ""
    ]
  }
